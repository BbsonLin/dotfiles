[core]
  excludesfile = ~/.gitignore
  editor = nvim
[user]
  #email = bobson801104@gmail.com
  email = bobson.lin@adlinktech.com
  name = Bobson Lin
[alias]
  co = checkout
  ci = commit
  br = branch
  st = status
  lg = log --graph --abbrev-commit
  hist = log --pretty=format:\"%Cgreen%h %Creset%cd %Cblue[%cn] %Creset%s%C(yellow)%d%C(reset)\" --graph --date=relative --decorate
  llg = log --graph --name-status --pretty=format:\"%C(red)%h %C(reset)(%cd) %C(green)%an %Creset%s %C(yellow)%d%Creset\" --date=relative
